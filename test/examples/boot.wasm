FUNC TEST_SPLIT
  VAR LIST = ",ONE,TWO,,THREE,FOUR,"
  VAR ARR = STRING_SPLIT LIST ","
  FOR ITEM IN ARR
    LOG ITEM
  LOG ARRAY_JOIN ARR ";"
  ARR = ARRAY
  LOG ARRAY_JOIN ARR ";"
  ARRAY_PUSH ARR
  LOG ARRAY_JOIN ARR ";"
