- function raw(expr) { return "<?php echo "+expr+";?>"; }
- function xq(expr) { return "<?php echo htmlspecialchars("+expr+", ENT_QUOTES, 'UTF-8');?>"; }
- function uq(expr) { return "<?php echo urlencode("+expr+");?>"; }

mixin php
  | <?php 
  block
  | ?>

//- Conditionals
mixin if(expr, end)
  <?php if(!{expr}): ?>
  block
  <?php !{end}; ?>

mixin elseif(expr, end)
  <?php elseif(!{expr}): ?>
  block
  <?php !{end}; ?>

mixin else
  <?php else: ?>
  block
  <?php endif; ?>

mixin switch(expr)
  <?php switch(!{expr}): ?>
  block
  <?php endswitch; ?>

mixin case(expr)
  <?php case(!{expr}): ?>
  block
  <?php break; ?>

mixin default
  <?php default: ?>
  block

//- Loops
mixin while(expr)
  <?php while(!{expr}): ?>
  block
  <?php endwhile; ?>

mixin do-while(expr)
  <?php do { ?>
  block
  <?php } while(!{expr}); ?>

mixin for(expr)
  <?php for(!{expr}): ?>
  block
  <?php endfor; ?>

mixin foreach(expr)
  <?php foreach(!{expr}): ?>
  block
  <?php endforeach; ?>

//- Function
mixin function(call)
  <?php function !{call} { ?>
  block
  <?php }; ?>
